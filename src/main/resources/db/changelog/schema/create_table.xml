<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- User Table -->
    <changeSet id="tbl_user" author="thilinam">
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="gender" type="VARCHAR(50)" />
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_date" type="timestamp"/>
        </createTable>
        <createIndex indexName="idx_user_email" tableName="user">
            <column name="email" />
        </createIndex>
    </changeSet>

    <!-- ToDoList Table -->
    <changeSet id="tbl_todolist" author="thilinam">
        <createTable tableName="todolist">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(255)" />
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_date" type="timestamp"/>
        </createTable>
        <createIndex indexName="idx_todolist_user_id" tableName="todolist">
            <column name="user_id" />
        </createIndex>
        <addForeignKeyConstraint constraintName="fk_todolist_user" baseTableName="todolist" baseColumnNames="user_id"
                                 referencedTableName="user" referencedColumnNames="id" />
    </changeSet>

    <!-- Task Table -->
    <changeSet id="tbl_task" author="thilinam">
        <createTable tableName="task">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(255)" />
            <column name="start_date" type="DATE" />
            <column name="end_date" type="DATE" />
            <column name="status" type="VARCHAR(50)" />
            <column name="todo_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_date" type="timestamp"/>
        </createTable>
        <createIndex indexName="idx_task_todo_id" tableName="task">
            <column name="todo_id" />
        </createIndex>
        <addForeignKeyConstraint constraintName="fk_task_todolist" baseTableName="task" baseColumnNames="todo_id"
                                 referencedTableName="todolist" referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>
